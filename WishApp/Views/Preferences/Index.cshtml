@model IEnumerable<WishApp.Models.Preference>

@{
    ViewBag.Title = "Index";
}

<h3>Preference List Page</h3>
<br/>

<p>
    <div class="myButton">
        @Html.ActionLink("Create New Preference", "Create")
    </div>
</p>
<table class="table">
    <tr>
        <th>
            <h4>E-mail</h4>
        </th>
        <th>
            <h4>Occasion</h4>
        </th>
        <th>
            <h4>Preference</h4>
        </th>
        <th>
            <h4>Flowers</h4>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.User.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Occasions)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserPreference)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Flowers)
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id=item.PreferenceId })
        </td>
    </tr>
}

</table>
