@model WishApp.Models.Preference

@{
    ViewBag.Title = "Edit";
}

<h2>Edit Preferences</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.PreferenceId)

        <div class="form-group">
            @*@Html.LabelFor(model => model.UserId, "UserId", htmlAttributes: new { @class = "control-label col-md-2" })*@
            <h4>User E-mail:</h4>
            <div class="col-md-10">
                @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.Occasions, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <h4>Occasion:</h4>
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Occasions, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Occasions, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.UserPreference, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <h4>Expectation:</h4>
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserPreference, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UserPreference, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.Flowers, htmlAttributes: new { @class = "control-label col-md-2" })*@
            <h4>Flowers YES/NO:</h4>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Flowers)
                    @Html.ValidationMessageFor(model => model.Flowers, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
